<!DOCTYPE html>
<html lang="en">
<head>

  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>View Doctors</title>
  <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
  />

  <style>
    body {
      background-color: #f8f9fa;
    }
    .card {
      margin-top: 30px;

      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);

    }
    .table th {
      background-color: #007bff;
      color: white;
    }

    .btn {
      padding: 0.3rem 0.6rem;
      font-size: 0.875rem;
    }

  </style>
</head>
<body>
  <div class="container">
    <!-- Header -->
    <div class="text-center mt-5">
      <h2>All Doctors</h2>
      <p class="text-muted">Manage and view all doctor details</p>
    </div>

    <!-- Doctor Count -->
    <div class="card text-white bg-info mb-3">
      <div class="card-body">
        <h5 class="card-title">Total Doctors</h5>

        <p class="card-text" id="doctorCount"><%= doctors.length %></p>

      </div>
    </div>

    <!-- Doctors Table -->
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Doctor List</h5>
        <div class="table-responsive">
          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Specialization</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Experience</th>

                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% doctors.forEach((doctor, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= doctor.name %></td>
                <td><%= doctor.specialization %></td>
                <td><%= doctor.phone %></td>
                <td><%= doctor.email %></td>
                <td><%= doctor.experience %></td>
                <td>
                  <a href="/updatedoctor/<%= doctor.id %>" class="btn btn-sm btn-warning">Update</a>

                  <form action="/deletedoctor/<%= doctor.id %>" method="POST" style="display:inline;">
                    <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                  </form>
                </td>
              </tr>
              <% }) %>

            </tbody>
          </table>
        </div>
      </div>
    </div>

  </div>
</body>
</html>
