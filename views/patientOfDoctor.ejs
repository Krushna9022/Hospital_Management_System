<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Hospital Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', sans-serif;
            transition: background-color 0.3s, color 0.3s;
        }

        .sidebar {
            height: 100vh;
            width: 250px;
            background-color: #1e2a38;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 20px;
            transition: width 0.3s;
            overflow-x: hidden;
        }

        .sidebar.collapsed {
            width: 70px;
        }

        .sidebar .brand {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 30px;
            color: #fff;
            font-size: 1.5rem;
            white-space: nowrap;
        }

        .sidebar.collapsed .brand span {
            display: none;
        }

        .sidebar ul {
            list-style-type: none;
            padding-left: 0;
        }

        .sidebar ul li {
            padding: 12px 20px;
            color: #ccc;
            display: flex;
            align-items: center;
            cursor: pointer;
        }

        .sidebar ul li:hover {
            background-color: #2c3e50;
            color: white;
        }

        .sidebar ul li i {
            margin-right: 15px;
        }

        .sidebar.collapsed ul li span {
            display: none;
        }

        .sidebar ul ul {
            padding-left: 20px;
        }

        .sidebar .collapse li {
            padding-left: 40px;
        }

        .content {
            margin-left: 250px;
            padding: 30px;
            transition: margin-left 0.3s;
        }

        .collapsed~.content {
            margin-left: 70px;
        }

        .toggle-btn {
            position: absolute;
            top: 10px;
            left: 10px;
            z-index: 999;
        }

        .dark-mode {
            background-color: #2c3e50;
            color: white;
        }

        .logout {
            color: #ff4d4d;
        }

        .logout:hover {
            color: white;
            background-color: #a94442;
        }
    </style>
</head>

<body>

    <!-- Sidebar -->
    <%- include("partials/doctorSidebar.ejs")%>
        <!-- Main Content -->

        <div class="content" id="content">
            <h1>Welcome to the Doctors dashboard</h1>
            <p>Here you can manage patients, appointments.</p>
            <div class="container mt-4">
                <h2>All Patients</h2>
                <table class="table table-bordered table-hover table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Age</th>
                            <th>Contact</th>
                            <th>Issue</th>
                            <th>Gender</th>
                            <th>Room</th>
                            <th>Nurse</th>
                            <th>Admitted</th>
                            <th>status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% patients.forEach(patient=> { %>
                            <tr>
                                <td>
                                    <%= patient.patientId %>
                                </td>
                                <td>
                                    <%= patient.name %>
                                </td>
                                <td>
                                    <%= patient.age %>
                                </td>
                                <td>
                                    <%= patient.contact %>
                                </td>
                                <td>
                                    <%= patient.issue %>
                                </td>
                                <td>
                                    <%= patient.gender %>
                                </td>
                                <td>
                                    <%= patient.room_no %>
                                </td>
                                <td>
                                    <%= patient.nurseName %>
                                </td>
                                <td>
                                    <%= patient.admitted?.toISOString().split('T')[0] || '' %>
                                </td>
                                <td>
                                    <%= patient.status===1 ? 'Admitted' : 'Discharged' %>
                                </td>
                                <td><button class="btn btn-secondary "><a class="text-light text-decoration-none" href="/api/doctor/medicines/<%=patient.patientId%>">Add medicine</a></button>
                                    <% if (patient.status===1) { %>
                                        <form action="/api/doctor/patient/discharge/<%= patient.patientId %>" method="POST"
                                            style="display:inline;">
                                            <button type="submit" class="btn btn-sm btn-warning" onclick="return confirm('Are you want to dischage')">Discharge</button>
                                        </form>
                                        <% } else { %>
                                            <span class="text-success">âœ“</span>
                                            <% } %>
                                </td>
                                


                            </tr>
                            <% }); %>
                    </tbody>

                </table>
            </div>
        </div>
        <%- include("register.ejs")%>
            <!-- Scripts -->
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
            <script>
                function toggleSidebar() {
                    document.getElementById("sidebar").classList.toggle("collapsed");
                    document.getElementById("content").classList.toggle("collapsed");
                }

                function toggleDarkMode() {
                    document.body.classList.toggle("dark-mode");
                }
            </script>

           

</body>

</html>