<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Hospital Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', sans-serif;
            transition: background-color 0.3s, color 0.3s;
        }

        .sidebar {
            height: 100vh;
            width: 250px;
            background-color: #1e2a38;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 20px;
            transition: width 0.3s;
            overflow-x: hidden;
        }

        .sidebar.collapsed {
            width: 70px;
        }

        .sidebar .brand {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 30px;
            color: #fff;
            font-size: 1.5rem;
            white-space: nowrap;
        }

        .sidebar.collapsed .brand span {
            display: none;
        }

        .sidebar ul {
            list-style-type: none;
            padding-left: 0;
        }

        .sidebar ul li {
            padding: 12px 20px;
            color: #ccc;
            display: flex;
            align-items: center;
            cursor: pointer;
        }

        .sidebar ul li:hover {
            background-color: #2c3e50;
            color: white;
        }

        .sidebar ul li i {
            margin-right: 15px;
        }

        .sidebar.collapsed ul li span {
            display: none;
        }

        .sidebar ul ul {
            padding-left: 20px;
        }

        .sidebar .collapse li {
            padding-left: 40px;
        }

        .content {
            margin-left: 250px;
            padding: 30px;
            transition: margin-left 0.3s;
        }

        .collapsed~.content {
            margin-left: 70px;
        }

        .toggle-btn {
            position: absolute;
            top: 10px;
            left: 10px;
            z-index: 999;
        }

        .dark-mode {
            background-color: #2c3e50;
            color: white;
        }

        .logout {
            color: #ff4d4d;
        }

        .logout:hover {
            color: white;
            background-color: #a94442;
        }
    </style>
</head>

<body>

    <!-- Sidebar -->
    <%- include("partials/adminSidebar.ejs")%>
    <!-- Main Content -->

    <div class="content" id="content">
        <h1>Welcome to the hospital dashboard</h1>
        <form action="/api/admin/updatedoctors" method="post" class="p-3">
            <h5>Update Doctor</h5>

            <input type="hidden" name="userId" id="updateUserId" value="<%=rec[0].userId%>">

            <div class="mb-3">
                <label for="updateName" class="form-label">Full Name</label>
                <input type="text" name="name" class="form-control" id="updateName" value="<%=rec[0].name%>" required>
            </div>

            <div class="mb-3">
                <label for="updateEmail" class="form-label">Email</label>
                <input type="email" name="email" class="form-control" id="updateEmail" value="<%=rec[0].email%>"
                    required>
            </div>

            <div class="mb-3">
                <label for="updateContact" class="form-label">Contact</label>
                <input type="text" name="contact" class="form-control" id="updateContact" value="<%=rec[0].contact%>"
                    required>
            </div>

               <div class="mb-3">
                <label for="updateExperience" class="form-label">experience</label>
                <input type="text" name="experience" class="form-control" id="updateExperience" value="<%=rec[0].experience%>"
                    required>
            </div>

              <div class="mb-3">
                <label for="updateSpecialization" class="form-label">Specialization </label>
                <input type="text" name="specialization" class="form-control" id="updateSpecialization" value="<%=rec[0].name%>" specialization>
            </div>
            
             <!--  Specialization -->
              <!-- <div class="col-12 col-md-6 col-lg-4" id="specializationField" style="display: none;">
                <label for="specialization" class="form-label">Specialization</label>
                <input type="text" class="form-control" id="specialization" placeholder="Enter your specialization" name="specialization" >
              </div>  -->
            
              <!-- Experience -->
              <!-- <div class="col-12 col-md-6 col-lg-4" id="experienceField" style="display: none;">
                <label for="experience" class="form-label">Experience (in years)</label>
                <input type="number" class="form-control" id="experience" placeholder="Enter your experience" name="experience">
              </div> -->

            <input type="submit" class="btn btn-success" value="updateDetail">
        </form>
    </div>
    <%- include("register.ejs")%>
        <!-- Scripts -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            function toggleSidebar() {
                document.getElementById("sidebar").classList.toggle("collapsed");
                document.getElementById("content").classList.toggle("collapsed");
            }

            function toggleDarkMode() {
                document.body.classList.toggle("dark-mode");
            }
        </script>
</body>

</html>