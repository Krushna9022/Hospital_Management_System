<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Hospital Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', sans-serif;
            transition: background-color 0.3s, color 0.3s;
        }

        .sidebar {
            height: 100vh;
            width: 250px;
            background-color: #1e2a38;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 20px;
            transition: width 0.3s;
            overflow-x: hidden;
        }

        .sidebar.collapsed {
            width: 70px;
        }

        .sidebar .brand {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 30px;
            color: #fff;
            font-size: 1.5rem;
            white-space: nowrap;
        }

        .sidebar.collapsed .brand span {
            display: none;
        }

        .sidebar ul {
            list-style-type: none;
            padding-left: 0;
        }

        .sidebar ul li {
            padding: 12px 20px;
            color: #ccc;
            display: flex;
            align-items: center;
            cursor: pointer;
        }

        .sidebar ul li:hover {
            background-color: #2c3e50;
            color: white;
        }

        .sidebar ul li i {
            margin-right: 15px;
        }

        .sidebar.collapsed ul li span {
            display: none;
        }

        .sidebar ul ul {
            padding-left: 20px;
        }

        .sidebar .collapse li {
            padding-left: 40px;
        }

        .content {
            margin-left: 250px;
            padding: 30px;
            transition: margin-left 0.3s;
        }

        .collapsed~.content {
            margin-left: 70px;
        }

        .toggle-btn {
            position: absolute;
            top: 10px;
            left: 10px;
            z-index: 999;
        }

        .dark-mode {
            background-color: #2c3e50;
            color: white;
        }

        .logout {
            color: #ff4d4d;
        }

        .logout:hover {
            color: white;
            background-color: #a94442;
        }
    </style>
</head>

<body>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="brand">
            <i class="fas fa-hospital-symbol"></i>
            <span class="ml-2">Hospital</span>
        </div>
        <ul>
            <!-- Staff Add Dropdown -->
            <li data-toggle="collapse" data-target="#staffAddSubmenu" aria-expanded="false">
                <i class="fas fa-user-plus"></i>
                <span>Staff Add (Hospital)</span>
                <i class="fas fa-caret-down ml-auto"></i>
            </li>
            <ul class="collapse" id="staffAddSubmenu">
                <div class="container mt-1 text-center">
                    <!-- Trigger Button -->
                    <button type="button" class="btn btn-dark" data-bs-toggle="modal"
                        data-bs-target="#registrationModal">
                        Open Registration Form
                    </button>
                </div>
            </ul>


            <!-- View Staff Dropdown -->
            <li data-toggle="collapse" data-target="#staffViewSubmenu" aria-expanded="false">
                <i class="fas fa-eye"></i>
                <span>View Staff</span>
                <i class="fas fa-caret-down ml-auto"></i>
            </li>
            <ul class="collapse" id="staffViewSubmenu">
                <li><i class="fas fa-user-md"></i> <span>View Doctors</span></li>
                <li><i class="fas fa-user-nurse"></i> <span>View Nurses</span></li>
                <li><i class="fas fa-user"></i> <span>View Receptionists</span></li>
            </ul>

            <!-- Patient Dropdown -->
            <li data-toggle="collapse" data-target="#patientSubmenu" aria-expanded="false">
                <i class="fas fa-procedures"></i>
                <span>Patient</span>
                <i class="fas fa-caret-down ml-auto"></i>
            </li>
            <ul class="collapse" id="patientSubmenu">
                <li><i class="fas fa-users"></i> <span>View All Patients</span></li>
                <li><i class="fas fa-file-medical"></i> <span>View Patient Details</span></li>
                <li><i class="fas fa-file-invoice-dollar"></i> <span>View Patient Bill</span></li>
            </ul>

            <li>
                <button class="btn btn-secondary w-100 mt-2" onclick="toggleDarkMode()">
                    <i class="fas fa-moon"></i> <span>Toggle Dark Mode</span>
                </button>
            </li>

            <li class="logout mt-2"><i class="fas fa-sign-out-alt"></i><span>Logout</span></li>
        </ul>
    </div>

    <!-- Toggle Sidebar Button -->
    <button class="btn btn-dark toggle-btn" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Main Content -->

    <div class="content" id="content">
        <h1>Welcome to the hospital dashboard</h1>
        <p>Here you can manage patients, staff, and appointments.</p>
    </div>
    <%- include("register.ejs")%>
        <!-- Scripts -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            function toggleSidebar() {
                document.getElementById("sidebar").classList.toggle("collapsed");
                document.getElementById("content").classList.toggle("collapsed");
            }

            function toggleDarkMode() {
                document.body.classList.toggle("dark-mode");
            }
        </script>
</body>

</html>