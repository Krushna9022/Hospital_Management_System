<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Hospital Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            position: fixed;
            height: 100vh;
            padding: 15px;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar li {
            padding: 10px;
            cursor: pointer;
        }

        .sidebar li:hover {
            background-color: #495057;
        }

        .content {
            margin-left: 270px;
            padding: 20px;
        }

        .collapsed {
            margin-left: 0 !important;
        }

        .toggle-btn {
            position: fixed;
            left: 260px;
            top: 10px;
            z-index: 1000;
        }

        .dark-mode {
            background-color: #1e1e1e;
            color: white;
        }

        .dark-mode .sidebar {
            background-color: #222;
        }
    </style>
</head>

<body>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="brand mb-4">
            <i class="fas fa-hospital-symbol"></i>
            <span class="ml-2">Hospital</span>
        </div>
        <ul>
            <!-- Staff Add -->
            <li data-toggle="collapse" data-target="#staffAddSubmenu" aria-expanded="false">
                <i class="fas fa-user-plus"></i>
                <span>Staff Add (Hospital)</span>
                <i class="fas fa-caret-down ml-auto"></i>
            </li>

            <!-- Room Management Dropdown -->
            <li data-toggle="collapse" data-target="#roomMenu" aria-expanded="false">
                <i class="fas fa-door-open"></i>
                <span>Room Management</span>
                <i class="fas fa-caret-down ml-auto"></i>
            </li>
            <ul class="collapse" id="roomMenu">
                <li class="pl-4">
                    <a href="/api/receptionist/add" class="text-white"><i class="fas fa-plus-circle mr-2"></i>Add Room</a>
                </li>
                <li class="pl-4">
                    <a href="api/reception/viewrooms" class="text-white"><i class="fas fa-eye mr-2"></i>View Rooms</a>
                </li>
            </ul>

            <!-- Dark Mode -->
            <li class="mt-2">
                <button class="btn btn-secondary w-100" onclick="toggleDarkMode()">
                    <i class="fas fa-moon"></i> <span>Toggle Dark Mode</span>
                </button>
            </li>

            <!-- Logout -->
            <li class="logout mt-2"><i class="fas fa-sign-out-alt"></i><span> Logout</span></li>
        </ul>
    </div>

    <!-- Toggle Sidebar Button -->
    <button class="btn btn-dark toggle-btn" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Main Content -->
    <div class="content" id="content">
        <h1>Welcome to the Receptionist Dashboard</h1>
        <p>Here you can manage patients, staff, appointments, and rooms.</p>

    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleSidebar() {
            document.getElementById("sidebar").classList.toggle("collapsed");
            document.getElementById("content").classList.toggle("collapsed");
        }

        function toggleDarkMode() {
            document.body.classList.toggle("dark-mode");
        }
    </script>
</body>

</html>
